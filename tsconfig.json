{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",

    "rootDir": "./src",
    "outDir": "./dist",

    "strict": false,
    "sourceMap": true,
    "skipLibCheck": true,

    "jsx": "react",
    "jsxFactory": "h",

    "baseUrl": ".",
  },
  "include": [ "./src/**/*.tsx", "./src/**/*.ts" ],
  "exclude":  [ "./node_modules/*", "./web_modules/*.js", ]
}